extends base

block meta
    - var seotitle = 'Checkout'

block main
    .content-container
        h1.content__h1 Checkout

        .checkout
            .cart
                article.cart-item
                    .cart-item__info
                        a(href="#")
                            +picture('cart-item__picture picture', 'cart/img', 'jpg', 142, 100, 'Raise your stats! - Статистика 60% + 1600 РЭ +')
                        .cart-item__content
                            h3.cart-item__title 
                                a(href="#") Raise your stats! - Статистика 60% + 1600 РЭ +
                                    span x1
                            ul.cart-item__params.list-reset
                                li +1 Win Extra 
                                li Play with booster (Duo/Lobby)
                                li Priority order

                    .cart-item__price 163.40$

                    form.cart-item__remove
                        button.cart-item__remove-btn.btn-reset(type="button")
                            +sprite('', 15, 19, 'remove')

                article.cart-item
                    .cart-item__info
                        a(href="#")
                            +picture('cart-item__picture picture', 'cart/img', 'jpg', 142, 100, 'Raise your stats! - Статистика 60% + 1600 РЭ +')
                        .cart-item__content
                            h3.cart-item__title
                                a(href="#") Raise your stats! - Статистика 60% + 1600 РЭ +
                                    span x1
                            ul.cart-item__params.list-reset
                                li +1 Win Extra 
                                li Play with booster (Duo/Lobby)
                                li Priority order

                    .cart-item__price 163.40$

                    form.cart-item__remove
                        button.cart-item__remove-btn.btn-reset(type="button")
                            +sprite('', 15, 19, 'remove')

            .checkout__blocks._auth
                //section.checkout__block
                    h3.checkout__title How we can contact you?
                    p.checkout__subtitle Fast registration
                    form.checkout__small-form(action="#")
                        input.form__input(type="text" name="fullname")

                //section.checkout__block
                    h3.checkout__title Or
                    p.checkout__subtitle Log in or sign up <span>to receive 2.5$</span> for your account
                    .checkout__personal
                        button.form__submit.btn-reset(type="button") 
                            span Sign UP
                        button.form__submit-bordered.btn-reset(type="button") 
                            span Log In

                section.checkout__block.checkout__coupon
                    h3.checkout__title Got a coupon?
                    p.checkout__subtitle Apply it here to get a discount!
                    form.checkout__small-form(action="#")
                        input.form__input(type="text" name="fullname")
                        button.form__submit.btn-reset(type="submit") 
                            span Apply

                section.checkout__block.checkout__payment
                    h3.checkout__title Choose a payment method
                    +picture('checkout__payment-picture picture', 'checkout/paypal', 'png', 127, 100)

                form.checkout__form
                    .checkout__block
                        h3.checkout__title Game account information
                        .checkout__form-grid
                            fieldset.form__fieldset
                                label.form__label(for="checkout-login") Login
                                input.form__input(type="text" name="login" id="checkout-login")

                            fieldset.form__fieldset
                                label.form__label(for="checkout-password") Password
                                input.form__input(type="password" name="password" id="checkout-password")

                            fieldset.form__fieldset
                                label.form__label(for="checkout-nickname") Nickname
                                //Стиль поля с атрибутом disabled
                                input.form__input(type="text" name="nickname" id="checkout-nickname" disabled)

                            fieldset.form__fieldset
                                label.form__label(for="checkout-game-server") Game server
                                //Стиль поля с ошибкой валидации
                                input.form__input._error(type="text" name="game_server" id="checkout-game-server")
                                .form__error
                                    span
                                        +sprite('', 2, 11, 'info')
                                    | Поле заполнено неверно

                            fieldset.form__fieldset.checkout__form-vehicle-type
                                label.form__label(for="checkout-vehicle-type") Vehicle type
                                input.form__input(type="text" name="vehicle_type" id="checkout-vehicle-type")

                            fieldset.form__fieldset.checkout__form-textarea
                                label.form__label(for="checkout-additional-information") Additional information
                                textarea.form__textarea(name="additional_information" id="checkout-additional-information")

                    .checkout__total
                        .checkout__total-sum Total:
                            span $1 235.00

                        .checkout__total-bonus 
                            span <strong>2.5$</strong> will be credited to your account
                            +info('checkout__total-bonus-info', 'Timofey Gluxov', 'Ive made an order and it said that it would take 3 days to complete. The booster finished in a little more than half an hour. They gave me a 10% discount on a next order afterwards, and I asked them that the same booster would be able to pick up this order for me. Overgear provides absolutely a top tier, and cheap, service!')

                        button.checkout__total-submit.btn-reset(type="submit") 
                            span Processed checkout

                    .checkout__checkboxes
                        .form__checkbox
                            input.form__checkbox-input(type="checkbox" name="privacy_policy" id="checkout_privacy_policy")
                            label.form__checkbox-label(for="checkout_privacy_policy")
                                span.form__checkbox-check
                                span.form__checkbox-text I have read and accept the <a href="#">Terms of service</a>. I also consent to the site <a href="#">Privacy policy</a> and processing of personal data.

                        .form__checkbox
                            input.form__checkbox-input(type="checkbox" name="subscribe" id="checkout_subscribe")
                            label.form__checkbox-label(for="checkout_subscribe")
                                span.form__checkbox-check
                                span.form__checkbox-text Yes, I'd like to receive exclusive offers and information on products and services that may be of interest to me by email. Customers can opt-out or unsubscribe at any time.

